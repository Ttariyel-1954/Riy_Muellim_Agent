# Server
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=muellim_agent
DB_USER=arti_admin
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_MAX_POOL=20

# AI Models
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
DEFAULT_AI_MODEL=claude-sonnet-4-5-20250514

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MFA
MFA_ISSUER=ARTI-Muellim-Agent

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# R Shiny
SHINY_PORT=3838
SHINY_HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# LMS Integration
GOOGLE_CLASSROOM_CLIENT_ID=
GOOGLE_CLASSROOM_CLIENT_SECRET=
MICROSOFT_TEAMS_CLIENT_ID=
MICROSOFT_TEAMS_CLIENT_SECRET=
MOODLE_URL=
MOODLE_TOKEN=

# Email / SMS
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMS_API_KEY=
